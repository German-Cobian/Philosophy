<% popular = Vote.popular %>
    <% popular.each do |vote| %>
    <div class="">
      <div class="">
        <%= image_tag(vote.article.image) if vote.article.image.attached? %>
      </div>
      <div class="">
        <h5 class=""><%= vote.article.title %></h5>
        <p class="banner-text white-color"><%= vote.article.text %>
        <small ><%= link_to 'Read more', article_path(vote.article), class: "small-anchor" %></small></p>
      </div>
    </div>
  <%end%>



<div class="cont1-ind">
  <p>Find me at categories/index</p>
</div>

<div class="cont2-ind">
  <div class="d-flex flex-row justify-content-around border-top"> 
  <% @categories.each do |category|%>
    <div class="mt-3">
      <h6 class=""><%= link_to category.name, category %></h6> 
      <%= link_to category.most_recent_article.title, article_path(category.most_recent_article) %>
    </div>
  <% end %>
</div>

