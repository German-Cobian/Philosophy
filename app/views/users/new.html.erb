<div class="d-flex flex-row justify-content-center">
  <div class="border my-5 pt-3 px-5">
    <h1 class="">Sign Up</h1>
    <div class="cont-user d-flex flex-row justify-content-center">
      <div="">
        <%= form_with model: @user do |form| %>
          <%= form.label :name, "Username:" %>
          <br />
          <%= form.text_field :name, placeholder: "Enter Name"%>
          <br /><br />
          <%= form.submit "Submit", class: "" %>
        <% end %>
      </div>
    </div>
  </div>
</div>