<div class="d-flex flex-row justify-content-around align-items-center mt-2 border-bottom">

  <div class="mb-2">
    <h5 class=""> Philosopher <span class="">&#183;</span></h5>
  </div>

  <div class="d-flex flex-row justify-content-between mb-3">
    <div>
      <%= link_to("Home", root_path, class: "link") %>
    </div>
    <div class="px-2">
      <% Category.all.each do |category| %>
        <small><%= link_to category.name, category %></small>
      <% end %>
    </div>
  </div>

  <div class="d-flex flex-row mb-2">

    <% if current_user %>

      <div class="px-2">        
        <%= link_to logged_in_user , class:"" %>
      </div> 
    
      <div class="px-2">
        <%= link_to new_article_path, class:"" do %>
        "Create Article"
      <% end%>
      </div>

      <div class="px-2">
        <%= link_to "Sign Out", signout_path(session[:user_id]), method: :delete, class:"" %>
      </div>


    <% else%> 

      <div class="px-2">
        <%= link_to "Sign In", signin_path, class:"" %>
      </div>

      <div class="px-2">
        <%= link_to 'Sign Up', new_user_path, class: "" %>
      </div>

    <%end%>
  </div>    
  
</div>
