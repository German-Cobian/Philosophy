<div class="d-flex flex-row justify-content-around border-bottom">

  <div class="">
    <h5 class=""> Philosopher <span class="">&#183;</span></h5>
  </div>

  <div class="d-flex flex-row justify-content-between">
    <div class="txt-orange">
    <%= link_to("Home", root_path, class: "link") %>
    </div>
    <div>
      <% Category.all.each do |category| %>
        <%= link_to category.name, category %>
      <% end %>
    </div>
  </div>

  <div class="d-flex flex-row">

    <% if current_user %>

      <p class="">        
        <%= link_to logged_in_user , class:"" %>
      </p> 
    
      <p class="">
        <%= link_to new_article_path, class:"" do %>
        "Create Article"
      <% end%>
      </p>

      <p class="">
        <%= link_to "Sign Out", signout_path(session[:user_id]), method: :delete, class:"" %>
      </p>


    <% else%> 

      <p class="">
        <%= link_to "Sign In", signin_path, class:"" %>
      </p>

      <p class="">
        <%= link_to 'Sign Up', new_user_path, class: "" %>
      </p>

    <%end%>
  </div>    
  
</div>
