<div class="container">
  
  <div class="d-flex flex-row justify-content-center">
    
    <div class="d-flex flex-column border py-4 my-5 bg-light">
     
      <div class="d-flex flew-row justify-content-center">
        <h1 class="ml-5">Articles</h1>
      </div>

      <div>
        <% @articles.each do |article| %>
          <div class="mx-5">
            <div class="pt-5">
              <strong>Title</strong>
              <p><%= article.title %></p>
            </div>

            <div>
              <h6>Text</h6>
              <p><%= article.text %></p>
            </div>

            <div class="d-flex flex-row mt-5">
              <p>Author:  </p>
              <p><%= article.creator.name %></p>
            </div>

            <div class="d-flex flex-row">
              <p>Created at:   </p>
              <p><%= time_ago_in_words(article.created_at) %></p>
            </div>

            <div class="d-flex flex-row border-bottom">
              <p class="px-2"><%= link_to 'Show', article %></p>
            </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

